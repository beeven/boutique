.home-content
    //background-image: url("../img/purple-candle.jpg")
    height: 500px
    over-flow: hidden
    display: flex
    .preview
        flex: 1
        height: 100%
        a
            display: block
            background-size: cover
            height: 100%
            transition: background-image 500ms ease

    .thumbnails
        flex: 1
        height: 100%
        position: relative


        .thumbnail
            width: 140px
            height: 100px
            a,a:visited
                display: block
                height: 100%
                background-size: cover
                background-position: 50% 50%
                color: white
                text-align: center
                line-height: 100px
                text-decoration: none
                font-size: 25px
                text-shadow: 2px 2px 8px #000000
                font-family: 'csb_italic'
                box-shadow: 1px 1px 8px #000000

        .thumbnail:first-child
            position: relative
            top: 100px
            margin-left: auto
            margin-right: auto
        .thumbnail:nth-of-type(2)
            top: 250px
            position: absolute
            left: 15%
        .thumbnail:nth-of-type(3)
            top: 250px
            position: absolute
            right: 15%
